@using Microsoft.AspNetCore.Identity
@model Post
@inject UserManager<User> UserManager
@{
    ViewBag.Title = "Добавление новой публикации";
    Layout = "_Layout";
}

<h4 class="text-center">@ViewBag.Title</h4>
<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post" asp-controller="Posts" asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            
            <div class="form-group">
                <label asp-for="Text"></label><br/>
                <textarea class="form-control" asp-for="Text" rows="3" cols="50"></textarea>
                <span asp-validation-for="Text"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="File"></label><br />
                <input class="form-control-file" asp-for="File" />
            </div>
            @Html.Hidden("userId", @Model.UserId)
            <div>
                <input class="form-control" type="submit" value="Добавить" />
            </div>
        </form>
    </div>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}